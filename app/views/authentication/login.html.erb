<div class="row justify-content-center">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center mb-0">Sign In</h2>
      </div>
      <div class="card-body">
        <%= form_with url: authenticate_path, local: true, class: "needs-validation", novalidate: true do |form| %>
          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control", required: true, value: @user&.email %>
          </div>

          <div class="mb-3">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", required: true %>
          </div>

          <div class="d-grid">
            <%= form.submit "Sign In", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr class="my-4">
        <div class="text-center">
          <p class="mb-0">Don't have an account?</p>
          <%= link_to "Create Account", register_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
